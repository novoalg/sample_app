<% provide(:title, @user.first_name + " " + @user.last_name) %>
<div class="row">
 <asside class="span4">
  <section>
	<h1>
	 <%= gravatar_for @user %>
	 <%= @user.last_name %>, <%= @user.first_name %> 
	</h1>
  </section>
 </asside>
 <div class="span8">
    <% if @user.microposts.any? %>
        <h3>Microposts (<%= @user.microposts.count %>)</h3>
        <ol class="microposts">
            <%= render @microposts %>
        </ol>
        <%= will_paginate @microposts %>
    <% end %>
 </div>
</div>
